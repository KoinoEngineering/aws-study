      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "PublicRouteTable2"
        },
        "SubnetId": {
          "Ref": "PublicSubnet2"
        }
      }
    },
    "WinDir": {
      "Type": "AWS::DirectoryService::MicrosoftAD",
      "Properties": {
        "Edition": "Standard",
        "Name": "WinDir.com",
        "Password": "November17/",
